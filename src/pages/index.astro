---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Email Sending With Astro + Resend">
	<main>
		<div class="form-container">
			<form method="POST" action="/api/send-email.json" enctype="application/x-www-form-urlencoded" >
				<input type="email" name="email" id="email" placeholder="Enter Email..." required class="field">
				<input type="text" name="firstName" id="firstName" placeholder="Enter Your Name..." required class="field">
				<textarea name="message" id="message" placeholder="Enter Your Message Here..." required class="textarea-field" />
				<button type="submit" class="send-btn">Send</button>
			</form>
		</div>
	</main>
</Layout>

<style>
	.form-container {
		display: flex;
		padding: 10px;
		margin: 5px;
		height: 100vh;
		background: #7777773d;
		text-align: center;
		justify-content: center;
	}
	form {
		display: flex;
		align-self: center;
		justify-self: center;
		width:50%;
		flex-direction: column;
	}
	.field {
		padding: 10px;
		margin: 8px;
		border: 2px;
		border-radius: 50px;
	}
	.textarea-field {
		padding: 10px;
		margin: 8px;
		border: 2px;
		border-radius: 10px;
	}
	.send-btn {
		margin: 4px;
		padding: 10px;
		text-align: center;
		justify-self: center;
		background-color: blue;
		font-weight: bold;
	}
	.send-btn:hover {
		background-color: green;
	}
	
	@media only screen and (max-width: 600px) {
		form {
			width:100%;
			margin: 0px;
		}
		.field, .textarea-field {
			margin: 5px;
			width: 80%;
			justify-self: center;
			align-self: center;
		}
	}
</style>
